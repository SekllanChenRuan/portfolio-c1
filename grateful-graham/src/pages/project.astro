---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Projects">
        <main class="main container">
        <div class="p-2 mt-5 mb-2 bg-transparent">
          <h2 class="h1 ms-5 mb-5">Projects</h2>
        </div>

        <div class="d-flex flex-row">
          <div class="card mx-3 mb-5">
            <img
              src="src/media/images/age-calc.png"
              class="card-img-top"
              alt="A screenshot of an age calculator app."
            />
            <div class="card-body">
              <h5 class="card-title">Age Calculator</h5>
              <p class="card-text">Age calculator created with Javascript.</p>
              <a
                href="https://sekllanchenruan.github.io/age-calculator-js/"
                class="btn btn-primary"
                target="_blank"
                >Github Repo Link</a
              >
            </div>
          </div>

          <div class="card mx-3 mb-5">
            <img
              src="src/media/images/image-slide.png"
              class="card-img-top"
              alt="A screenshot of an image slider project."
            />
            <div class="card-body border-top">
              <h5 class="card-title">Image Slider</h5>
              <p class="card-text">An image slider created with Javascript.</p>
              <a
                href="https://sekllanchenruan.github.io/image-slider-js/"
                class="btn btn-primary"
                target="_blank"
                >Github Repo Link</a
              >
            </div>
          </div>

          <div class="card mx-3 mb-5">
            <img
              src="src/media/images/to-do-list.png"
              class="card-img-top"
              alt="A screenshot of a to do list project."
            />
            <div class="card-body border-top">
              <h5 class="card-title">To Do List</h5>
              <p class="card-text">
                To-Do list created using Javascript and Bootstrap.
              </p>
              <a
                href="https://sekllanchenruan.github.io/to-do-list-js/"
                class="btn btn-primary"
                target="_blank"
                >Github Repo Link</a
              >
            </div>
          </div>

          <div class="card mx-3 mb-5">
            <img
              src="src/media/images/drag-and-drop.png"
              class="card-img-top"
              alt="A screenshot of a drag and drop Javascript project."
            />
            <div class="card-body border-top">
              <h5 class="card-title">Drag and Drop API</h5>
              <p class="card-text">
                Drag and Drop API demo created using Javascript.
              </p>
              <a
                href="https://sekllanchenruan.github.io/drag-and-drop-js/"
                class="btn btn-primary"
                target="_blank"
                >Github Repo Link</a
              >
            </div>
          </div>
        </div>
      </main>


  <script is:inline slot="bs-script" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script is:inline slot="script" src="src/scripts/index.js"></script>
</Layout>


